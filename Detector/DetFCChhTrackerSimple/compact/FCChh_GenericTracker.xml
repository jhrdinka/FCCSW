<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">
    

<info name="GenericTracker"
  title="GenericTracker"
  author="Valentin Volkl"
  url="no"
  status="development"
  version="$Id:??$">
  <comment>An easy-to-configure Tracker</comment>
</info>

<define>
  <constant name="Tracker_InnerBarrel_rmin" value="157.7*mm"/>
  <constant name="Tracker_InnerBarrel_rmax" value="600.*mm"/>
  <constant name="Tracker_InnerBarrel_length" value="600.*mm"/>
  <constant name="Tracker_module_width" value="51.2*mm"/>
  <constant name="Tracker_module_length" value="102.4*mm"/>
  <constant name="Tracker_module_thickness" value="0.125*mm"/>
</define>


<display>
        <vis name="comp0" r="0.55" g="0.82" b="0.77" alpha="1" showDaugthers="true" visible="true" drawingStyle="solid"/>
        <vis name="comp1" r="1.0" g="1." b="0.7" alpha="1" showDaugthers="true" visible="true" drawingStyle="solid"/>
        <vis name="comp2" r="0.74" g="0.72" b="0.85" alpha="1" showDaugthers="true" visible="true" drawingStyle="solid"/>
        <vis name="comp3" r="0.98" g="0.5" b="0.44" alpha="1" showDaugthers="true" visible="true" drawingStyle="solid"/>
        <vis name="mre" r="0.0" g="0.5" b="0" alpha="1" showDaugthers="true" visible="true" drawingStyle="solid"/>
</display>

<readouts>
  <readout name="TrackerReadout">
    <segmentation type="CartesianGridXY" grid_size_x="0.5*mm" grid_size_y="0.5*mm"/>
    <id>system:3,rod:10,module:10,module_component:2,x:32:-16,y:-16</id>
  </readout>
</readouts>


<detectors>
  <detector id="18" name="GenericTracker_InnerBarrel" type="GenericTrackerBarrel" readout="TrackerReadout" >
  <dimensions rmin="Tracker_InnerBarrel_rmin" rmax="Tracker_InnerBarrel_rmax" dz="Tracker_InnerBarrel_length"/>
  <layer repeat="3"/>
  <module name="GenericTrackerModule" width="Tracker_module_width" length="Tracker_module_length" thickness="Tracker_module_thickness" vis="rme">
    <module_component thickness="0.1*mm" material="Silicon" sensitive="true" vis="comp0" />
    <module_component thickness="0.1*mm" material="Carbon" sensitive="false" vis="comp1"/>
    <module_component thickness="0.1*mm" material="Tungsten" sensitive="false" vis="comp2"/>
  </module>
</detector>
</detectors>
</lccdd>


