<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">
    

<info name="GenericTracker"
  title="GenericTracker"
  author="Valentin Volkl"
  url="no"
  status="development"
  version="$Id:??$">
  <comment>An easy-to-configure Tracker</comment>
</info>

  <includes>
    <gdmlFile  ref="../../DetCommon/compact/elements.xml"/>
    <gdmlFile  ref="../../DetCommon/compact/materials.xml"/>
  </includes>
<define>
  <constant name="world_size" value="10*m"/>
  <constant name="world_x" value="world_size"/>
  <constant name="world_y" value="world_size"/>
  <constant name="world_z" value="world_size"/>
  <constant name="Tracker_InnerBarrel_rmin" value="20*mm"/>
  <constant name="Tracker_InnerBarrel_rmax" value="900.*mm"/>
  <constant name="Tracker_InnerBarrel_length" value="1000.*mm"/>
  <constant name="Tracker_module_width" value="25*mm"/>
  <constant name="Tracker_module_length" value="200*mm"/>
  <constant name="Tracker_module_thickness" value="1.425*mm"/>
</define>


<display>
        <vis name="comp0" r="0.55" g="0.82" b="0.77" alpha="0.5" showDaugthers="false" visible="true" drawingStyle="solid"/>
        <vis name="comp1" r="1.0" g="1." b="0.7" alpha="0.5" showDaugthers="true" visible="false" drawingStyle="solid"/>
        <vis name="comp3" r="0.74" g="0.72" b="0.85" alpha="0.5" showDaugthers="true" visible="false" drawingStyle="solid"/>
        <vis name="comp2" r="0.98" g="0.5" b="0.44" alpha="0.5" showDaugthers="true" visible="true" drawingStyle="solid"/>
        <vis name="rme" r="0.1" g="0.7" b="0.2" alpha="0.5" showDaugthers="true" visible="true" drawingStyle="solid"/>
</display>

<readouts>
  <readout name="TrackerReadout">
    <segmentation type="CartesianGridXY" grid_size_x="0.5*mm" grid_size_y="0.5*mm"/>
    <id>system:4,layer:10,rod:10,module:10,module_component:4,x:40:-12,y:-12</id>
  </readout>
</readouts>


<detectors>
  <detector id="1" name="GenericTrackerBarrel" type="GenericTrackerBarrel" readout="TrackerReadout" sensitive="true" >
  <sensitive type="SimpleTrackerSD"/>
  <dimensions rmin="Tracker_InnerBarrel_rmin" rmax="Tracker_InnerBarrel_rmax" dz="Tracker_InnerBarrel_length"/>
  <layers module="GenericTrackerModule_small" rmin="75*mm" rmax="150*mm" dz="200*mm" repeat="2" stereo_offset="0*mm"/>
  <layers module="GenericTrackerModule" rmin="175*mm" rmax="300*mm" dz="400*mm" repeat="2"/>
  <module name="GenericTrackerModule" width="Tracker_module_width" length="Tracker_module_length" thickness="Tracker_module_thickness" vis="comp0"/>
  <module name="GenericTrackerModule_small" width="0.2*Tracker_module_width" length="Tracker_module_length" thickness="Tracker_module_thickness" vis="comp0"/>
  <module name="GenericTrackerModule_big" width="6*Tracker_module_width" length="2*Tracker_module_length" thickness="Tracker_module_thickness" vis="comp0" components="GenericModuleComponents"/>
  <module_components name="GenericModuleComponents">
    <module_component thickness="1.1*mm" material="Silicon" sensitive="true" vis="comp0" />
  </module_components>
</detector>
</detectors>
</lccdd>


